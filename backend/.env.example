# Backend Environment Variables
# Server
PORT=8080

# Auth (set all to enforce Entra validation; leave empty to use dev preview mode)
TENANT_ID=00000000-0000-0000-0000-000000000000
API_AUDIENCE=api://your-api-app-id
ADMIN_GROUP_IDS=group-object-id-1,group-object-id-2

# Azure Resource Integration (optional for local dev)
KEY_VAULT_URI=https://your-key-vault-name.vault.azure.net/
ROOTCAS_TABLE_NAME=RootCAs
CERTS_TABLE_NAME=Certs

# Rate Limiting (defaults shown)
ISSUE_RATE_LIMIT_WINDOW_MS=3600000
ISSUE_RATE_LIMIT_MAX=10
REVOKE_RATE_LIMIT_WINDOW_MS=900000
REVOKE_RATE_LIMIT_MAX=5
